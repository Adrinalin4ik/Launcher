                            <Label x:Name="label1_Copy1" Content="Free" HorizontalAlignment="Left" Margin="203,337,0,0" VerticalAlignment="Top" FontSize="26.667" Foreground="#FF706E6E"/>
                            <RichTextBox x:Name="richTextBox1_Copy1" HorizontalAlignment="Left" Height="47" Margin="10,257,0,0" VerticalAlignment="Top" Width="214" FontSize="16" IsDocumentEnabled="True" Focusable="False">
                                <FlowDocument>
                                    <Paragraph>
                                        <Run Text="PerfectBot найден на вашем компьютере"/>
                                    </Paragraph>
                                </FlowDocument>
                            </RichTextBox>
                        </Grid>
                    </Grid>
                </TabItem>
            </TabControl>
        </GroupBox>
        <ToggleButton x:Name="ToggleLogIn" Content="Log In" Margin="0,26,10,0" Style="{DynamicResource ExpanderDownHeaderStyle}" Height="31" VerticalAlignment="Top" Grid.Column="1" HorizontalAlignment="Right" Width="103"/>
        <local:ExitButton HorizontalAlignment="Right" Height="14" Margin="0,6,10,0" VerticalAlignment="Top" Width="16" RenderTransformOrigin="-0.7,0.5" Grid.Column="1" MouseLeftButtonDown="ExitButton_MouseLeftButtonDown"/>
    </Grid>
</Window>