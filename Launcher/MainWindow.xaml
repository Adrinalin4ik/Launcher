                            </LinearGradientBrush>
                        </Grid.Background>
                        <Grid Margin="10,27,388,0" Height="208" VerticalAlignment="Top">
                            <Rectangle HorizontalAlignment="Left" Stroke="#FF0A0A0A" Width="214" Opacity="0.6" RadiusY="20.5" RadiusX="20.5" Fill="Black" Margin="0,0,0,1"/>
