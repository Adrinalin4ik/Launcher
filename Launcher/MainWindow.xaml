                                <Paragraph>
                                    <Run Text="- Добавлено состояние бараков"/>
                                </Paragraph>
                                <Paragraph>
                                    <Run Text="- "/>
                                    <Run Text=" "/>
                                    <Run Text=" "/>
                                    <Run Text=" "/>
                                    <Run Text="Добавлено время матча"/>
                                </Paragraph>
                                <Paragraph>
                                    <Run Text="- Переработан алгоритм обработки данных"/>
                                </Paragraph>
                                <Paragraph>
                                    <Run Text="- Анти афк система теперь не включается автоматически , "/>
                                    <Run Text=" "/>
                                    <Run Text=" "/>
                                    <Run Text=" "/>
                                    <Run Text="F2 "/>
                                    <Run Text=" "/>
                                    <Run Text=" "/>
                                    <Run Text=" "/>
                                    <Run Text="-"/>
