                                <Paragraph>
                                    <Run Text="-------------------------------------------------"/>
                                </Paragraph>
                                <Paragraph>
                                    <Run Text="Официальная группа http://vk.com/dotatools"/>
                                </Paragraph>
                            </FlowDocument>
                        </RichTextBox>
                        <ProgressBar Height="28" Margin="289,342,10,0" VerticalAlignment="Top" IsIndeterminate="True"/>
                        <Label x:Name="label1" Content="Free" HorizontalAlignment="Left" Margin="203,337,0,0" VerticalAlignment="Top" FontSize="26.667" Foreground="#FF706E6E"/>
                        <RichTextBox x:Name="richTextBox1" HorizontalAlignment="Left" Height="47" Margin="10,257,0,0" VerticalAlignment="Top" Width="214" FontSize="16" IsDocumentEnabled="True" Focusable="False">
                            <FlowDocument>
                                <Paragraph>
                                    <Run Text="Dota2ls "/>
                                    <Run Text="не найдена на вашем компьютере"/>
                                </Paragraph>
                            </FlowDocument>
                        </RichTextBox>
                    </Grid>
                </TabItem>
                <TabItem Header="ArcheAge Bot">
                    <Grid>
                        <Grid.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="Black" Offset="0"/>
                                <GradientStop Color="#FF2CF918" Offset="1"/>
                            </LinearGradientBrush>
                        </Grid.Background>
                        <Grid Margin="10,27,388,0" Height="210" VerticalAlignment="Top">
                            <Rectangle HorizontalAlignment="Left" Stroke="#FF0A0A0A" Width="214" Opacity="0.6" RadiusY="20.5" RadiusX="20.5" Fill="Black"/>
                            <Label x:Name="label2" Content="AgeBot" Margin="26,10,0,0" VerticalAlignment="Top" FontSize="40" FontFamily="Bodoni MT Black" HorizontalAlignment="Left" Width="157">
                                <Label.Foreground>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="Black" Offset="1"/>
                                        <GradientStop Color="#FF00FF5D" Offset="0.42"/>
                                        <GradientStop Color="#FF2DF900"/>
                                    </LinearGradientBrush>
                                </Label.Foreground>
                            </Label>
                            <Canvas HorizontalAlignment="Left" Height="111" Margin="58,73,0,0" VerticalAlignment="Top" Width="94">
                                <Canvas.Background>
                                    <ImageBrush ImageSource="Images/Logo.ico"/>
                                </Canvas.Background>
                            </Canvas>
                        </Grid>
                        <RichTextBox x:Name="richTextBox_Copy" Height="277" Margin="268,27,10,0" VerticalAlignment="Top" FontSize="13.333" Focusable="False">
                            <FlowDocument Focusable="False" IsEnabled="False">
                                <Paragraph>
                                    <Run Text="AgeBot Что нового?"/>
                                </Paragraph>
                                <Paragraph>
                                    <Run Text="--------------------------------------------------"/>
                                </Paragraph>
                                <Paragraph>
                                    <Run Text="- Переделан алгоритм"/>
