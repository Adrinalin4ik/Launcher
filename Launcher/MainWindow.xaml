                            </Canvas>
                        </Grid>
                        <Button x:Name="Dota2lsButton" Content="Загрузить" HorizontalAlignment="Left" Height="50" Margin="10,332,0,0" VerticalAlignment="Top" Width="193" FontSize="26.667" FontFamily="Rockwell Extra Bold"/>
                        <RichTextBox x:Name="richTextBox" Height="277" Margin="268,27,10,0" VerticalAlignment="Top" FontSize="13.333" Focusable="False">
                            <FlowDocument Focusable="False">
                                <Paragraph>
                                    <Run Text="Dota2ls 2.1"/>
                                    <Run Text=" "/>
                                    <Run Text=" "/>
                                    <Run Text=" "/>
                                    <Run Text=" "/>
                                    <Run Text=" "/>
                                    <Run Text=" "/>
                                    <Run Text=" "/>
                                    <Run Text=" Что нового?"/>
